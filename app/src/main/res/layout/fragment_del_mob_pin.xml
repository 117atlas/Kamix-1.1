<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context=".fragments.DelMobPINFragment">

    <TextView
        android:id="@+id/tvText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_weight="0.80"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/enter_pin_code"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#99000000"
        android:textSize="16sp"
        android:id="@+id/delete_mobile_message"
        android:text="@string/delete_mobile_confirm"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/etPin"
        android:layout_marginLeft="8dp"
        style="@style/signin_edittext_style"
        android:layout_marginTop="12dp"
        android:hint="@string/pin_code_label"
        android:inputType="numberPassword"
        android:maxLength="4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="8dp">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:text="@string/yes"
            android:id="@+id/yes"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight=".5"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:text="@string/no"
            android:id="@+id/no"
            android:textColor="@color/colorPrimary"
            android:layout_toLeftOf="@id/yes"
            android:layout_weight=".5"/>

    </RelativeLayout>

</LinearLayout>